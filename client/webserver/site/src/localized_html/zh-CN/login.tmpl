{{define "login"}}
{{template "top" .}}
<div id="main" data-handler="login" class="main align-items-center justify-content-center flex-column">
  <div class="d-flex flex-column overflow-auto w-100">
    <form class="card mx-auto my-5 bg1 border1" id="loginForm">
      <div class="bg2 px-2 py-1 text-center fs18">登录</div>
      <div class="p-4">
        <div class="pb-2">
          <label for="pw" class="pl-1 mb-1">密码</label>
          <input type="password" class="form-control select" id="pw" autocomplete="current-password">
          <div class="pl-4 pt-2">
            <input class="form-check-input" type="checkbox" id="rememberPass">
            <label for="rememberPass" class="pl-1">记住我的密码</label>
          </div>
        </div>
        <div class="d-flex justify-content-end mt-4">
          <button id="submit" type="button" class="col-8 justify-content-center fs15 bg2 selected">提交</button>
        </div>
        <div class="fs15 pt-3 text-center d-hide errcolor" id="errMsg"></div>
      <div>
    </form>
  </div>
</div>
{{template "bottom"}}
{{end}}
