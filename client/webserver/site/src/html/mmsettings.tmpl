{{define "mmsettings"}}
{{template "top" .}}
<div id="main" data-handler="mmsettings" class="flex-grow-1 d-flex flex-column align-items-stretch stylish-overflow">
  <div class="w-100 flex-center p-2 fs28 d-flex d-md-none border-bottom">[[[Market Maker Settings]]]</div>
  <div class="d-flex border-bottom align-items-stretch">
    <div id="backButton" class="fs18 p-2 hoverbg pointer flex-center border-end">
      <span class="ico-wide-headed-left-arrow fs28"></span>
    </div>
    <div id="mmTitle" class="flex-center fs28 d-none d-md-block">[[[Market Maker Settings]]]</div>
    <div id="marketHeader" class="flex-center fs24 p-2 flex-grow-1 d-hide">
      <div id="botTypeDisplay" class="me-2"></div>
      <div id="cexNameDisplayBox" class="me-2">[[[using_this_cex]]]</div>
      <span class="me-2">[[[on]]]</span>
      <img class="mini-icon" data-base-logo><img class="mx-1 mini-icon" data-quote-logo>
      <span id="baseHeader"></span> &ndash; <span id="quoteHeader"></span>
      <span class="mx-2">@</span>
      <span id="hostHeader"></span>
      <span id="headerReconfig" class="p-2 fs16 ico-edit hoverbg pointer"></span>
    </div>
  </div>
  <div id="noMarket" class="flex-grow-1 flex-center">
    <button id="noMarketBttn" class="large">[[[Select a Market]]]</button>
  </div>
  <div id="marketLoading" class="flex-grow-1 flex-center d-hide">
    <div class="flex-center position-relative me-2 fs16">
      <div class="ico-spinner spinner"></div>
    </div>
    <span class="fs18">[[[Loading market data]]]</span>
  </div>
  <div id="botSettingsContainer" class="flex-grow-1 d-flex flex-wrap d-hide">

    {{- /* LEFT COLUMN */ -}}
    <div class="col-24 col-xl-8 col-xxl-6">
      <section class="px-3 pb-3">
        {{- /* MANUAL CONFIG */ -}}
        <div id="advancedConfig" class="d-hide">
          {{- /* VIEW-ONLY MODE */ -}}
          <div id="viewOnlyRunning" class="w-100 d-flex flex-center pb-2 mb-3 fs18 border-bottom">
            <span id="onIndicator" class="on-indicator on me-2"></span> [[[bots_running_view_only]]]
          </div>
          <div id="viewOnlyArchived" class="w-100 d-flex flex-center pb-2 mb-2 fs18 brdrbottom">
            <span id="viewOnlyArchivedMsg"></span>
          </div>
          {{- /* STRATEGY SELECTION */ -}}
          <div id="gapStrategyBox" class="w-100">
            <div class="d-flex flex-column align-items-stretch pb-2">
              <label class="text-nowrap me-2 mb-1 fs18 demi">[[[gap_strategy]]]</label>
              <select id="gapStrategySelect" class="form-select fs18">
                <option value="percent-plus">[[[gap_strategy_percent_plus]]]</option>
                <option value="percent">[[[gap_strategy_percent]]]</option>
                <option value="absolute-plus">
                  [[[gap_strategy_absolute_plus]]]
                </option>
                <option value="absolute">[[[gap_strategy_absolute]]]</option>
                <option value="multiplier">[[[gap_strategy_multiplier]]]</option>
              </select>
            </div>
            {{- /* STRATEGY DESCRIPTIONS */ -}}
            <div id="percentPlusInfo" class="w-100 pb-2 border-bottom fs16 text-justify">
              [[[strategy_percent_plus]]]
            </div>
            <div id="percentInfo" class="w-100 pb-2 border-bottom fs16 text-justify d-hide">
              [[[strategy_percent]]]
            </div>
            <div id="absolutePlusInfo" class="w-100 pb-2 border-bottom fs16 text-justify d-hide">
              [[[strategy_absolute_plus]]]
            </div>
            <div id="absoluteInfo" class="w-100 pb-2 border-bottom fs16 text-justify d-hide">
              [[[strategy_absolute]]]
            </div>
            <div id="multiplierInfo" class="w-100 pb-2 border-bottom fs16 text-justify d-hide">
              [[[strategy_multiplier]]]
            </div>
          </div>
          <div id="buttonsBox">
            <button id="updateButton" class="d-block go w-100 flex-center fs20 mt-2 p-2 hoverbg border pointer">[[[update_settings]]]</button>
            <button id="createButton" class="d-block go w-100 flex-center fs20 mt-2 p-2 hoverbg border pointer d-hide">[[[create_bot]]]</button>
            <button id="resetButton" class="d-block go w-100 flex-center fs20 mt-2 p-2 hoverbg border pointer">[[[reset_settings]]]</button>
          </div>

          <div id="profitSelectorBox" class="d-flex align-items-stretch py-2 my-2 border-top border-bottom d-hide">
            <div class="flex-grow-1 d-flex flex-column pe-2">
              <span id="profitPrompt" class="fs18">[[[bot_profit_title]]]</span>
              <span class="fs14 mt-1">
                [[[bot_profit_explainer]]]
              </span>
            </div>
            <div class="w-100 d-flex flex-column align-items-stretch">
              <div class="flex-center p-3 border-left">
                <input type="number" id="profitInput" class="p-2 text-center fs24 me-1">
                <span class="fs24">%</span>
              </div>
              <div id="profitInputErr" class="flex-center fs16 text-danger"></div>
            </div>
          </div>

          <div id="buyPlacementsBox">
            <div class="d-flex align-items-center fs18 mt-3 demi">
              [[[buy_placements]]]
              <span class="ico-info fs12 ms-1" data-tooltip="[[[buy_placements_tooltip]]]"></span>
            </div>
            <div class="d-flex flex-column" id="buyPlacementsTableWrapper">
              <table class="cell-border compact">
                <thead>
                  <th class="no-stretch">[[[priority]]]</th>
                  <th>[[[Lots]]]</th>
                  <th id="buyGapFactorHdr"></th>
                  <th></th>
                </thead>
                <tbody id="buyPlacementsTableBody">
                  <tr id="placementRowTmpl">
                    <td data-tmpl="priority"></td>
                    <td data-tmpl="lots"></td>
                    <td data-tmpl="gapFactor"></td>
                    <td class="no-stretch text-start text-nowrap">
                      <span data-tmpl="removeBtn" class="ico-cross fs15 pointer px-2"></span>
                      <span data-tmpl="upBtn" class="ico-arrowup fs15 pointer px-2"></span>
                      <span data-tmpl="downBtn" class="ico-arrowdown fs15 pointer px-2"></span>
                    </td>
                  </tr>
                  <tr id="addBuyPlacementRow">
                    <td></td>
                    <td><input id="addBuyPlacementLots" class="lots-input p-2" step="1" type="number"></td>
                    <td><input id="addBuyPlacementGapFactor" class="gap-factor-input p-2" type="number"></td>
                    <td class="no-stretch text-start">
                      <span id="addBuyPlacementBtn" class="ico-plus fs15 pointer p-2"></span>
                    </td>
                  </tr>
                </tbody>
              </table>
              <span id="buyPlacementsErr" class="fs15 pt-3 text-center d-hide text-danger text-break"></span>
            </div>
          </div>

          <div id="sellPlacementsBox">
            <div class="d-flex align-items-center fs18 mt-3 demi">
              [[[sell_placements]]]
              <span class="ico-info fs12 ms-1" data-tooltip="[[[sell_placements_tooltip]]]"></span>
            </div>
            <div class="d-flex flex-column" id="sellPlacementsTableWrapper">
              <table class="cell-border compact">
                <thead>
                  <th class="no-stretch">[[[priority]]]</th>
                  <th>[[[Lots]]]</th>
                  <th id="sellGapFactorHdr"></th>
                  <th></th>
                </thead>
                <tbody id="sellPlacementsTableBody">
                  <tr id="addSellPlacementRow">
                    <td></td>
                    <td><input id="addSellPlacementLots" class="lots-input p-2" step="1" type="number"></td>
                    <td><input id="addSellPlacementGapFactor" class="gap-factor-input p-2" type="number"></td>
                    <td class="no-stretch">
                      <span id="addSellPlacementBtn" class="ico-plus fs15 pointer p-2"></span>
                    </td>
                  </tr>
                </tbody>
              </table>
              <span id="sellPlacementsErr" class="fs15 pt-3 text-center d-hide text-danger text-break"></span>
            </div>
          </div>
          <div id="switchToQuickConfig" class="flex-center p-2 hoverbg pointer border rounded3 mt-3">
            <span class="ico-settings fs14 me-1"></span>
            <span class="fs15">[[[Quick Configuration]]]</span>
          </div>
        </div>

        {{- /* QUICK CONFIG */ -}}
        <div id="quickConfig" class="d-hide">
          <div class="d-flex justify-content-between lh1 py-3 border-bottom">
            <span class="fs22">[[[Quick Configuration]]]</span>
            <div id="switchToAdvanced" class="p-1 flex-center hoverbg pointer">
              <span class="ico-settings fs14 me-1"></span>
              <span class="fs15">[[[Configure manually]]]</span>
            </div>
          </div>

          <div id="qcLevelSettingsBox" class="d-flex align-items-stretch mt-3">

            {{- /* LEVELS PER SIDE */ -}}
            <div class="col-12 d-flex flex-column align-items-stretch mt-1">
              <div class="fs17 pb-1">[[[Price levels per side]]]</div>
              <div class="d-flex align-items-stretch">
                <input id="levelsPerSide" type="number" class="fs18 text-center p-2 fs20" step="1">
                <div class="d-flex flex-column align-items-stretch">
                  <div id="levelsPerSideUp" class="flex-grow-1 flex-center px-2 hoverbg pointer lh1">
                    <span class="ico-arrowup"></span>
                  </div>
                  <div id="levelsPerSideDown" class="flex-grow-1 flex-center px-2 hoverbg pointer lh1">
                    <span class="ico-arrowdown"></span>
                  </div>
                </div>
              </div>
            </div>

            {{- /* LOTS PER LEVEL */ -}}
            <div id="qcLotsBox" class="col-12 d-flex flex-column align-items-stretch mt-1">
              <div id="lotsPerLevelLabel" class="fs17 pb-1">[[[Lots per level]]]</div>
              <div id="arbLotsLabel" class="fs17 pb-1 d-hide">[[[Lots per side]]]</div>
              <div class="d-flex align-items-stretch">
                <input id="lotsPerLevel" type="number" class="fs18 text-center p-2 fs20" step="1">
                <div class="d-flex flex-column align-items-stretch">
                  <div id="lotsPerLevelUp" class="flex-grow-1 flex-center px-2 hoverbg pointer lh1">
                    <span class="ico-arrowup"></span>
                  </div>
                  <div id="lotsPerLevelDown" class="flex-grow-1 flex-center px-2 hoverbg pointer lh1">
                    <span class="ico-arrowdown"></span>
                  </div>
                </div>
              </div>
            </div>
          </div>

          {{- /* LOT SIZE AND COMMITMENT SUMS */ -}}
          <div id="qcCommitDisplay" class="d-flex border rounded3 mt-3">
            <div class="col-12 px-2">
              <div class="d-flex align-items-center justify-content-between">
                <span>[[[Lot Size]]]</span>
                <span>
                  <span id="qcLotSizeDisplay"></span> <span id="qcLotSizeUnit"></span>
                </span>
              </div>
              <div class="d-flex align-items-center justify-content-between">
                <span>[[[Lot Size USD]]]</span>
                <span>
                  <span id="qcLotSizeUSDDisplay"></span> USD
                </span>
              </div>
            </div>
            <div class="col-12 px-2 border-left">
              <div class="d-flex align-items-center justify-content-between">
                <span>[[[Lots]]]</span>
                <span>
                  <span id="qcLotsDisplay"></span>
                </span>
              </div>
              <div class="d-flex align-items-center justify-content-between">
                <span>[[[Total USD]]]</span>
                <span>
                  <span id="qcCommitUSDDisplay"></span> USD
                </span>
              </div>
            </div>
          </div>

          <div id="qcProfitBox" class="d-flex align-items-stretch mt-3">

            {{- /* PROFIT */ -}}
            <div class="col-12 d-flex flex-column align-items-stretch mt-1">
              <div class="fs17 pb-1">[[[Profit threshold]]]</div>
              <div class="d-flex align-items-center">
                <input id="qcProfit" type="number" class="fs18 text-center p-2 fs20" step="1">
                <span class="fs28 ms-1">%</span>
                <!-- <div class="d-flex flex-column align-items-stretch">
                  <div id="levelsPerSideUp" class="flex-grow-1 flex-center px-2 hoverbg pointer lh1">
                    <span class="ico-arrowup"></span>
                  </div>
                  <div id="levelsPerSideDown" class="flex-grow-1 flex-center px-2 hoverbg pointer lh1">
                    <span class="ico-arrowdown"></span>
                  </div>
                </div> -->
              </div>
              <div class="pe-3">
                <div id="qcProfitSliderContainer" class="slider-container"></div>
              </div>
            </div>

            {{- /* RATE INCREMENT */ -}}
            <div id="levelSpacingBox" class="col-12 d-flex flex-column align-items-stretch mt-1">
              <div class="fs17 pb-1">[[[Price increment]]]</div>
              <div class="d-flex align-items-center">
                <input id="qcLevelSpacing" type="number" class="fs18 text-center p-2 fs20" step="1">
                <span class="fs28 ms-1">%</span>
              </div>
              <div id="qcLevelSpacingContainer" class="slider-container"></div>
            </div>

            {{- /* MATCH MULTIPLIER */ -}}
            <div id="matchMultiplierBox" class="col-12 d-flex flex-column align-items-stretch mt-1">
              <div class="fs17 pb-1">[[[Match buffer]]]</div>
              <div class="d-flex align-items-center">
                <input id="qcMatchBuffer" type="number" class="fs18 text-center p-2 fs20">
                <span class="fs28 ms-1">%</span>
              </div>
              <div id="qcMatchBufferContainer" class="slider-container"></div>
            </div>
          </div>
          <div id="qcError" class="pt-2 text-danger"></div>
        </div>

        <div id="placementsChartBox">
          <div id="placementsChart" class="border mt-3"></div>
          <span id="placementChartLegend" class="fs16 grey mt-1">δ = [[[remote exchange gap]]]</span>
        </div>

        <div id="balanceChecks" class="d-flex align-items-stretch mt-3 border rounded3">
          {{- /* BASE BALANCE CHECK */ -}}
          <div class="col-12 d-flex flex-column align-items-stretch">
            <div class="d-flex align-items-center justify-content-between p-2 border-bottom">
              <div class="flex-center">
                <img class="mini-icon me-2" data-base-logo>
                <span class="fs18" data-base-name></span>
              </div>
              <div id="baseBalOK" class="flex-center fs16">
                <div class="ico-check me-1"></div>
                <span>[[[OK]]]</span>
              </div>
              <div id="baseBalNotOK" class="flex-center ico-cross fs14 text-danger me-1"></div>
            </div>
            <div id="baseBalOKBals" class="d-flex align-items-start flex-column p-2">
              <span>[[[Commited]]]: <span id="baseBalanceCommit" class="fs17 demi"></span> <span class="fs15 grey" data-base-ticker></span></span>
              <span class="lh1" data-cex-show>├─ dex: <span id="baseBalanceDEXCommit" class="fs17 demi"></span></span>
              <span class="lh1" data-cex-show>└─ cex: <span id="baseBalanceCEXCommit" class="fs17 demi"></span></span>
            </div>
            <div id="baseBalNotOKBals" class="d-flex flex-column align-items-start p-2 d-hide">
              <span>[[[Required]]]: <span id="baseBalanceRequired" class="fs17 demi"></span> <span class="fs15 grey" data-base-ticker></span></span>
              <span>[[[Available]]]: <span id="baseBalanceAvail" class="fs17 demi"></span> <span class="fs15 grey" data-base-ticker></span></span>
              <span class="lh1" data-cex-show>├─ dex: <span id="baseBalanceDEXAvail" class="fs17 demi"></span></span>
              <span class="lh1" data-cex-show>└─ cex: <span id="baseBalanceCEXAvail" class="fs17 demi"></span></span>
            </div>
          </div>

          {{- /* QUOTE BALANCE CHECK */ -}}
          <div class="col-12 d-flex flex-column align-items-stretch border-left">
            <div class="d-flex align-items-center justify-content-between p-2 border-bottom">
              <div class="flex-center">
                <img class="mini-icon me-2" data-quote-logo>
                <span class="fs18" data-quote-name></span>
              </div>
              <div id="quoteBalOK" class="flex-center fs16">
                <div class="ico-check me-1"></div>
                <span>[[[OK]]]</span>
              </div>
              <div id="quoteBalNotOK" class="flex-center ico-cross fs14 text-danger me-1"></div>
            </div>
            <div id="quoteBalOKBals" class="d-flex align-items-start flex-column p-2">
              <span>[[[Commited]]]: <span id="quoteBalanceCommit" class="fs17 demi"></span> <span class="fs15 grey" data-quote-ticker></span></span>
              <span class="lh1" data-cex-show>├─ dex: <span id="quoteBalanceDEXCommit" class="fs17 demi"></span></span>
              <span class="lh1" data-cex-show>└─ cex: <span id="quoteBalanceCEXCommit" class="fs17 demi"></span></span>
            </div>
            <div id="quoteBalNotOKBals" class="d-flex flex-column align-items-start p-2 d-hide">
              <span>[[[Required]]]: <span id="quoteBalanceRequired" class="fs17 demi"></span> <span class="fs15 grey" data-quote-ticker></span></span>
              <span>[[[Available]]]: <span id="quoteBalanceAvail" class="fs17 demi"></span> <span data-quote-ticker></span></span>
              <span class="lh1" data-cex-show>├─ dex: <span id="quoteBalanceDEXAvail" class="fs17 demi"></span></span>
              <span class="lh1" data-cex-show>└─ cex: <span id="quoteBalanceCEXAvail" class="fs17 demi"></span></span>
            </div>
          </div>
        </div>
      </section>
    </div>

    <div class="col-24 col-xl-10 col-xxl-12 d-flex flex-wrap">
      <div class="col-24 col-xxl-8">
        <section class="flex-stretch-column">

          <div id="cexRebalanceSettings" class="settings-card">
            <label for="cexRebalanceCheckbox" class="fs18 d-flex align-items-center justify-content-between w-100">
              <div class="flex-center">
                <input type="checkbox" id="cexRebalanceCheckbox" class="form-check-input me-2 mt-0" checked>
                <span>[[[Arbitrage Rebalance]]]</span>
              </div>
              <span class="ico-info fs12 ms-1" data-tooltip="[[[enable_rebalance_tooltip]]]"></span>
            </label>
          </div>

          <div class="settings-card">
            <div class="fs18 mb-2 d-flex align-items-center justify-content-between">
              <div class="flex-center">
                [[[Drift tolerance]]]
              </div>
              <span class="ico-info fs12 me-1" data-tooltip="[[[drift_tolerance_tooltip]]]"></span>
            </div>
            <div id="driftToleranceContainer" class="slider-container"></div>
          </div>

          <div id="oraclesSettingBox" class="settings-card">
            <label for="useOracleCheckbox" class="fs18 d-flex align-items-center justify-content-between w-100">
              <div class="flex-center">
                <input type="checkbox" id="useOracleCheckbox" class="form-check-input me-2 mt-0" checked>
                <span>[[[use_oracles]]]</span>
              </div>
              <span class="ico-info fs12 ms-1" data-tooltip="[[[use_oracles_tooltip]]]"></span>
            </label>
            <div id="oracleWeightingSection" class="pt-2 mt-2 border-top">
              <div class="d-flex align-items-center justify-content-between">
                <span>[[[Oracle weight]]]</span>
                <span class="ico-info fs12 me-1" data-tooltip="[[[oracle_weighting_tooltip]]]"></span>
              </div>
              <div id="oracleWeightingContainer" class="slider-container"></div>
            </div>
            <div id="oracleBiasSection" class="mt-3">
              <div class="d-flex align-items-center justify-content-between">
                <span>[[[Oracle bias]]]</span>
                <span class="ico-info fs12 me-1" data-tooltip="[[[oracle_bias_tooltip]]]"></span>
              </div>
              <div id="oracleBiasContainer" class="slider-container"></div>
            </div>
          </div>

          <div id="orderPersistenceBox" class="settings-card">
            <div class="fs18 mb-2 d-flex align-items-center justify-content-between">
              <span>[[[Order persistence]]]</span>
              <span class="ico-info fs12 me-1" data-tooltip="[[[order_persistence_tooltip]]]"></span>
            </div>
            <div id="orderPersistenceContainer" class="slider-container"></div>
          </div>

          <div id="emptyMarketRateBox" class="settings-card">
            <label for="emptyMarketRateCheckbox" class="fs18 d-flex align-items-center justify-content-between w-100">
              <div class="flex-center">
                <input type="checkbox" id="emptyMarketRateCheckbox" class="form-check-input me-2 mt-0" checked>
                <span>[[[empty_market_rate]]]</span>
              </div>
              <span class="ico-info fs12 ms-1" data-tooltip="[[[empty_market_rate_tooltip]]]"></span>
            </label>
            <div id="emptyMarketRateInputBox" class="pt-2 mt-2 border-top">
              <input type="number" class="w-25" id="emptyMarketRateInput">
            </div>
            <div id="emptyMarketRateErr" class="pt-2 flex-center text-danger"></div>
          </div>
        </section>
      </div>

      <div class="col-24 col-xxl-8">
        <section class="flex-stretch-column">
          <div id="baseBalanceBox" class="settings-card">
            <div class="fs18 d-flex align-items-center justify-content-between">
              <div class="flex-center">
                <img class="micro-icon me-1" data-base-logo>
                <span>[[[dex_base_asset_balance]]]</span>
              </div>
              <span class="ico-info fs12 me-1" data-tooltip="[[[base_asset_balance_tooltip]]]"></span>
            </div>
            <div class="flex-stretch-column d-hide" id="noBaseBalance">
              <span class="text-danger">[[[no_balance_available]]]</span>
              <span id="showBaseAddress" class="underline hoverbg pointer">Show address</span>
            </div>
            <div id="baseBalanceContainer" class="slider-container"></div>
            <div class="d-flex justify-content-end align-items-end mt-2 lh1">
              <span class="me-1 grey fs15">[[[available]]]: </span>
              <span id="dexBaseAvail" class="fs15"></span>
              <span class="fs14 grey ms-1" data-base-ticker></span>
            </div>
            <div id="baseBalanceErr" class="flex-center pt-2 text-danger"></div>
          </div>

          <div id="cexBaseBalanceBox" class="settings-card">
            <div class="fs18 d-flex align-items-center justify-content-between">
              <div class="flex-center">
                <img class="micro-icon me-1" data-cex-logo>
                <img class="micro-icon me-1" data-base-logo>
                <span class="me-1">[[[cex_base_asset_balance]]]</span>
              </div>
              <span class="ico-info fs12 me-1" data-tooltip="[[[cex_alloc_tooltip]]]"></span>
            </div>
            <span class="d-hide text-danger text-break" id="noBaseCEXBalance">[[[no_balance_available]]]</span>
            <div id="cexBaseBalanceContainer" class="slider-container"></div>
            <div class="d-flex justify-content-end align-items-end mt-2 lh1">
              <span class="me-1 grey fs15">[[[available]]]: </span>
              <span id="cexBaseAvail" class="fs15"></span>
              <span class="fs14 grey ms-1" data-base-ticker></span>
            </div>
          </div>

          <div id="cexBaseRebalanceOpts" class="settings-card">
            <div class="fs18 d-flex align-items-center">
              <img class="micro-icon me-1" data-cex-logo>
              <img class="micro-icon me-1" data-base-logo>
              <span class="me-1">[[[cex_base_rebalance]]]</span>
            </div>
            <div class="fs18 mt-2 pt-1 border-top d-flex align-items-center justify-content-between">
              <span>[[[Minimum Balance]]]</span>
              <span class="ico-info fs12 me-1" data-tooltip="[[[arb_minbal_tooltip]]]"></span>
            </div>
            <div id="cexBaseMinBalanceContainer" class="slider-container"></div>
            <label for="" class="fs18 mt-2 pt-1 border-top d-flex align-items-center justify-content-between">
              <span>[[[Minimum Transfer]]]</span>
