{{define "newWalletForm"}}
<div class="bg2 px-2 py-1 text-center fs18">
  Add a
  <img id="nwAssetLogo" class="micro-icon mx-1">
  <span id="nwAssetName"></span>
  Wallet
</div>
<div class="p-4">
  {{if .subtext}}
    <div class="fs16">{{.subtext}}</div>
    <hr class="dashed my-4">
  {{end}}
  <div>
    <label for="acctName" class="pl-1 mb-1">Account Name</label>
    <input type="text" class="form-control select" id="acctName">
  </div>
  <div>
    {{if .showHelp}}
    <label for="newWalletPass" class="pt-3 pl-1 mb-0">Wallet Password</label>
    <div class="fs14 px-1 mb-1">This is the password you have configured with your wallet backend.</div>
    {{else}}
    <label for="newWalletPass" class="pt-3 pl-1 mb-1">Wallet Password</label>
    {{end}}
    <input type="password" class="form-control select" id="newWalletPass" autocomplete="off">
  </div>
  <div id="walletSettings" class="d-hide">
    <div class="pt-3 pl-1 mb-1">
      Wallet Settings
      <small>
        (enter below or <span class="underline pointer" id="selectCfgFile">select config file</span>)
      </small>
    </div>
    <div id="walletSettingsInputs"></div>
    <!-- input fields will be autogenerated -->
  </div>
  <div id="walletConfig" class="d-hide">
    <div class="pt-3 pl-1 mb-1 pointer">Configuration File</div>
    <input type="file" class="form-control select d-none" id="cfgFile">
    <div class="pl-1 mt-2 fs15">
      <span id="selectedCfgFile"></span>
      <span class="underline ml-3 pointer" id="removeCfgFile">remove</span>
    </div>
  </div>
  <div>
    {{if .showHelp}}
    <label for="nwClientPass" class="pt-3 pl-1 mb-0">Client Password</label>
    <div class="fs14 px-1 mb-1">Your client password is always required when performing sensitive wallet operations.</div>
    {{else}}
    <label for="nwClientPass" class="pt-3 pl-1 mb-1">Client Password</label>
    {{end}}
    <input type="password" class="form-control select" id="nwClientPass" autocomplete="off">
  </div>
  <div class="d-flex justify-content-end mt-4">
    <button id="submitAdd" type="submit" class="justify-content-center fs15 px-3 bg2 selected">Add</button>
  </div>
  <div class="fs15 pt-3 text-center d-hide errcolor" id="newWalletErr"></div>
</div>
{{end}}

{{define "unlockWalletForm"}}
<div class="bg2 px-2 py-1 text-center fs18">
  Unlock
  <img id="uwAssetLogo" class="micro-icon mx-1">
  <span id="uwAssetName"></span>
  Wallet
</div>
<div class="p-4">
  {{if .}}
    <div class="fs16">{{.}}</div>
    <hr class="dashed my-4">
  {{end}}
  <div>
    <label for="uwClientPass" class="pl-1 mb-0">Client Password</label>
    <div class="fs14 px-1 mb-1">Your client password is always required when performing sensitive wallet operations.</div>
    <input type="password" class="form-control select" id="uwClientPass" autocomplete="off">
  </div>
  <div class="d-flex justify-content-end mt-4">
    <button id="submitUnlock" type="submit" class="col-8 justify-content-center fs15 bg2 selected">Unlock</button>
  </div>
  <div class="fs15 pt-3 text-center d-hide errcolor" id="unlockErr"></div>
</div>
{{end}}
